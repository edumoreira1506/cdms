<%= simple_form_for(audience_member, url: url_form, class: 'card-body') do |f| %>
  <%= f.error_notification %>

  <%= f.hidden_field :id %>

  <div class="form-group">
    <%= f.input :name, 
                required: true, 
                autofocus: true, 
                class: 'form-control'%>
  </div>

  <div class="form-group">
    <%= f.input :email, required: true, class: 'form-control', type: 'email' %>
  </div>

  <div class="form-group">
    <%= f.input :cpf, required: true, class: 'form-control', :input_html => {'data-mask': '000.000.000-00'} %>
  </div>

  <div class="form-footer">
    <%= link_to list_audience_members_path, class: 'btn btn-secondary' do %>
      <%= t('views.links.back') %>
    <% end %>

    <%= f.button :submit,
      t('simple_form.buttons.save'), class: 'btn-primary ml-auto' %>
  </div>
<% end %>
